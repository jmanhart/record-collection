{
  "name": "records.manhart.io",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "workspaces": [
    "tools/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "generate-readme": "node scripts/generateReadme.cjs",
    "sync:discogs": "npm run fetch -w tools/sync",
    "sync:readme": "npm run generate-readme",
    "sync:all": "npm run sync:discogs && npm run sync:readme",
    "tools:dev": "npm run dev -w tools/sync"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-slot": "^1.0.2",
    "@supabase/supabase-js": "^2.39.8",
    "@tanstack/react-query": "^5.24.1",
    "lucide-react": "^0.341.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-query": "^3.39.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.20",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^5.1.6"
  }
}
